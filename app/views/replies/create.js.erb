// 教训：请勿使用‘#’符号进行注释，以免程执行出错
<%if @reply.errors.empty? %>
$("#errors").fadeOut();    //隐藏errors信息，防止提交成功仍有错误信息展示
$('<%= escape_javascript(render  @reply) %>').appendTo('.items').hide().fadeIn();  //更简洁的实现方式
$("#flash").html('<%= escape_javascript(render 'shared/flash_messages') %>').hide().fadeIn(); //flash通知
$('#new_reply')[0].reset();   //重置表单数据
<%else%>
$("#flash").fadeOut();
$("#errors").html('<%= escape_javascript(render 'shared/error_messages', object: @reply) %>').hide().fadeIn();
<%end%>
$('#reply_remark')[0].focus();  //光标栏位重置