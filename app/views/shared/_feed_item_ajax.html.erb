<li id="<%= object.id %>">
  <%= link_to gravatar_for(object.user), object.user %>
  <span class="user">
    <%= link_to object.user.name, object.user %>
  </span>
  <span class="title"><%= link_to  object.title, object %></span>
  <span class="content"><%= wrap(object.content) %></span>

  <span class="timestamp">
    Posted <%= time_ago_in_words(object.created_at) %> ago.
  </span>
  
  <% if current_user?(object.user) %>
  <%= link_to "delete", object, method: :delete,
title: object.content,remote: true %>
  <% end %>
</li>
