<%= form_for(@micropost,remote:true) do |f| %>
 <div id="errors">
   <%= render 'shared/error_messages', object: f.object %>
 </div>
 <div class='field'>
  <%= f.text_area :content, placeholder: "Compose new micropost..." %>
 </div>
 <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
